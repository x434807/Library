{
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"module": "commonjs",
		"sourceMap": true,
		"baseUrl": "./",
		"jsx": "react",
		"lib": ["esnext", "dom", "es2015"],
		"skipLibCheck": true,
		"paths": {
			"@reusable/*": ["client/components/_reusable/*"],
			"@components/*": ["client/components/*"],
			"@services/*": ["client/services/*"],
			"@static/*": ["client/static/*"],
			"@queries/*": ["client/queries/*"],
      "@utils/*": ["utils/*"],
      "@/*": ["client/*"]
		}
	}
}
